<html t:type="layout" title="croak Index"
    t:sidebarTitle="Framework Version"
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:p="tapestry:parameter">

  <!-- PROFILE -->
  <div class="row">
    <div class="col s12">
      <div id="profile" class="card z-depth-1-half">
        <div class="row card-content">
          <div class="col s3">
            <img id="avatar" src="${user.avatar}" alt="" class="circle responsive-img" />
          </div>
          <div class="col s9">
            <i class="mdi-navigation-more-vert right"></i>
            <a href="profile.html" class="card-title grey-text text-darken-4 tooltipped"
                data-position="right" data-tooltip="@${user.username}">
               ${user.firstName} ${user.lastName}
            </a>
            <!--<em class="hide-on-small-only grey-text">@mustermann</em>-->
            <blockquote class="grey-text">"Totally awesome!"</blockquote>

            <div style="margin-top: 16px">
              <p>Follows ${followingNumber}</p>
              <p>${followersNumber} followers</p>
              <p>${croaksNumber} croaks</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CROAKS -->
  <div id="croaks" class="row">
    <div id="croak-preloader" class="col s12 center">
      <div class="preloader-wrapper big active">
        <div class="spinner-layer spinner-blue-only">
          <div class="circle-clipper left"><div class="circle"></div></div>
          <div class="gap-patch"><div class="circle"></div></div>
          <div class="circle-clipper right"><div class="circle"></div></div>
        </div>
      </div>
    </div>
  </div>

</html>
